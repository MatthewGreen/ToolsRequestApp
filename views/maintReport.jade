extends layout

block content

    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container-fluid
            //
               Brand and toggle get grouped for better mobile display 
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='/') MAID
            //
               Collect the nav links, forms, and other content for toggling 
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
              ul.nav.navbar-nav
                li
                  a(href='/engineerIndex') Home
                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    | Tools
                    span.caret
                  ul.dropdown-menu(role='menu')
                    li
                      a(href='/addtoolrequest') Add Tool Request
                    li.divider
                    li
                      a(href='/receivedtools') Acknowledge Tools Received 
                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    | Report
                    span.caret
                  ul.dropdown-menu(role='menu')
                    li
                      a(href='/maintreport') Maintenance Report
              ul.nav.navbar-nav.navbar-right 
                img.dl-horizontal(src="images/wrench3.png" href='/engineerIndex')
                   
            //
               /.navbar-collapse 
          //
             /.container-fluid 

    h1= title
    p 

                doctype html
                h1.text-center Maintenance Report List
                html
                  <div class="container theme-showcase" role="main">
                  <div class="jumbotron">
                  head
                    title Test
                  body
    table.table(class="table-striped")
        
            thead
                th Tool
                th Description
                th Serial Number
                th Status
                th Install Date
                th Tool Location
                th Last Maint Date
                th Maint Description
                th Maint Cycle
            tbody
            each item in list
                tr
                    td #{item._TIMaster.MTName}
                    td #{item._TIMaster.MTDescription}
                    td #{item._TISerialNumber}
                    td #{item.TIStatus}
                    td #{prettyDate(item.TIInstallDate)}
                    td #{item.ToolLocation}
                    td #{prettyDate(item.MaintDateLast)}
                    td #{item.MaintDescription}
                    td #{item.MaintCycle}
                   